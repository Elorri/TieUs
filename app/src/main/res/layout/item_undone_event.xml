<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_selector"
    android:paddingBottom="@dimen/spacing_small"
    android:paddingLeft="@dimen/spacing_normal"
    android:paddingRight="@dimen/spacing_normal"
    android:paddingTop="@dimen/spacing_small">

    <com.elorri.android.tieus.ui.AvatarView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_bg_width"
        android:layout_height="@dimen/avatar_bg_height"
        android:layout_marginRight="@dimen/spacing_normal"
        android:layout_centerVertical="true"
        tools:background="@color/secondaryLight"/>

    <ImageView
        android:id="@+id/vectorIcon"
        android:layout_width="@dimen/emo_icon_width"
        android:layout_height="@dimen/emo_icon_height"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16dp"
        tools:background="@color/secondaryLight"/>

    <ImageView
        android:id="@+id/moodIcon"
        android:layout_width="@dimen/emo_icon_width"
        android:layout_height="@dimen/emo_icon_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/spacing_xsmall"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/secondary_dark_text"
        tools:background="@drawable/ic_sentiment_satisfied_black_48dp"/>
    <TextView
        android:id="@+id/unknown_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_small"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="\?"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/emo_icon_width"
        android:layout_marginRight="@dimen/emo_icon_width"
        android:layout_toEndOf="@id/vectorIcon"
        android:layout_toRightOf="@id/vectorIcon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/primary_dark_text"
        android:textSize="@dimen/text_size_xlarge"
        tools:text="Franck Lepage"/>

    <TextView
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginEnd="@dimen/emo_icon_width"
        android:layout_marginRight="@dimen/emo_icon_width"
        android:layout_toEndOf="@id/vectorIcon"
        android:layout_toRightOf="@id/vectorIcon"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:maxLines="1"
        android:textAppearance="?android:textAppearanceMedium"
        tools:text="24h thank you note"/>

    <ImageView
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/action"
        android:layout_toEndOf="@id/vectorIcon"
        android:layout_toRightOf="@id/vectorIcon"
        android:src="@drawable/ic_schedule_black_24dp"
        android:tint="@color/secondary_dark_text"/>

    <TextView
        android:id="@+id/due_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/clock"
        android:layout_below="@id/action"
        android:layout_marginEnd="@dimen/emo_icon_width"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginRight="@dimen/emo_icon_width"
        android:layout_toEndOf="@id/clock"
        android:layout_toRightOf="@id/clock"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:gravity="bottom"
        android:maxLines="1"
        android:paddingLeft="@dimen/spacing_small"
        android:textAppearance="?android:textAppearanceMedium"
        tools:text="30 sept."/>
</RelativeLayout>