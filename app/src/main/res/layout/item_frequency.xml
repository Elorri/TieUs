<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/vertical_line"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/message_background"/>
    <TextView
        android:id="@+id/feedback_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@id/vertical_line"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_small"
        android:gravity="center"
        android:text="@string/feedback2"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_medium"/>
    <TextView
        android:id="@+id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@id/vertical_line"
        android:layout_below="@id/feedback_title"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spacing_small"
        android:gravity="center"
        android:textSize="@dimen/text_size_medium"
        tools:text="next 24h"/>

    <TextView
        android:id="@+id/frequency_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/vertical_line"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_small"
        android:gravity="center"
        android:text="@string/frequency"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_medium"/>
    <TextView
        android:id="@+id/frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/vertical_line"
        android:layout_alignParentRight="true"
        android:layout_below="@id/frequency_title"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spacing_small"
        android:gravity="center"
        android:textSize="@dimen/text_size_medium"
        tools:text="every 3 months"/>
    <TextView
        android:id="@+id/expected_frequency_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/vertical_line"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spacing_small"
        android:text="@string/expected_frequency"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_medium"
        android:visibility="invisible"/>
    <View
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/feedback"
        android:background="@color/message_background"/>

</RelativeLayout>